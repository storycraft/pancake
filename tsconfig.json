{
  "compilerOptions": {
    "lib": [
      "ES2018",
      "DOM"
    ],
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "target": "ES2018",
    "noImplicitAny": true,
    "removeComments": false,
    "strict": true,
    "pretty": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "frontend/**/*",
    "pre-renderer.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "**/node_modules/*"
  ]
}